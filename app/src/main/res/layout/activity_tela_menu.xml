<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EBE7"
    tools:context=".Tela_menu">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_pequeno_abc" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="Bem-vindo(a) ao"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="HiperABC"
        android:textColor="#FF373C"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text=" Kids!"
        android:textColor="#00C4D0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/configuracao" />


    <View
        android:id="@+id/view"
        android:layout_width="830dp"
        android:layout_height="112dp"
        android:background="#FFDDD1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dividerPadding="20dp"
            android:orientation="horizontal"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:showDividers="middle">

            <FrameLayout
                android:layout_width="144dp"
                android:layout_height="160dp"
                android:layout_marginEnd="26dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cor_sombra_alfabeto"></View>

                <ImageButton
                    android:layout_width="142dp"
                    android:layout_height="67dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="Tela_alfabeto"
                    app:srcCompat="@drawable/icone_abc_alfabeto" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="105dp"
                    android:fontFamily="@font/dangrek_regular"
                    android:text="Alfabeto"
                    android:textColor="#000000"
                    android:textSize="30sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="144dp"
                android:layout_height="160dp"
                android:layout_marginEnd="26dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cor_sombra_tracejado" />


                <ImageButton
                    android:layout_width="86dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="Tela_Traco_A"
                    app:srcCompat="@drawable/lapis_tracejado" />

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45dp"
                    android:layout_marginBottom="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="Tela_Traco_A"
                    app:srcCompat="@drawable/raios_de_luz_2" />

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="63dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="Tela_Traco_A"
                    app:srcCompat="@drawable/raios_de_luz_1" />

                <ImageButton
                    android:layout_width="142dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="95dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="Tela_Traco_A"
                    app:srcCompat="@drawable/abc_tracejado" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="105dp"
                    android:fontFamily="@font/dangrek_regular"
                    android:text="Tracejado"
                    android:textColor="#000000"
                    android:textSize="30sp" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="144dp"
                android:layout_height="160dp"
                android:layout_marginEnd="26dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cor_sombra_jogomemoria" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="Tela_Memoria"
                    app:srcCompat="@drawable/jogomemoria" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="55dp"
                    app:srcCompat="@drawable/acento_memoria" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="105dp"
                    android:fontFamily="@font/dangrek_regular"
                    android:text="Memoria"
                    android:textColor="#000000"
                    android:textSize="30sp" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="144dp"
                android:layout_height="160dp"
                android:layout_marginEnd="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cor_sombra_vogal" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="Tela_Vogal"
                    app:srcCompat="@drawable/menu_vogal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="105dp"
                    android:fontFamily="@font/dangrek_regular"
                    android:text="Vogal"
                    android:textColor="#000000"
                    android:textSize="30sp" />

            </FrameLayout>

        </LinearLayout>
    </HorizontalScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>