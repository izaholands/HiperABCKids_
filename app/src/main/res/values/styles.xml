<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
            <item name="android:background">#00000000</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:backgroundDimEnabled">false</item>
        </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowMinWidthMinor"> 85% </item>
        <item name="android:windowAnimationStyle">@style/animacao</item>
    </style>

    <style name="animacao">
        <item name="android:windowEnterAnimation">@anim/slide_scale_out</item>
        <item name="android:windowExitAnimation">@anim/slide_scale_in</item>
    </style>

    <!--combinacao dos dois estilos diferentes do dialogo-->
    <style name="CombinacaoDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

        <item name="windowMinWidthMinor"> 85% </item>
        <item name="android:windowAnimationStyle">@style/animacao</item>

    </style>




</resources>

